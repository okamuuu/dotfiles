NeoBundle 'vim-scripts/yanktmp.vim'

NeoBundle 'airblade/vim-gitgutter.git'
let g:gitgutter_enabled = 0

NeoBundle 'jelera/vim-javascript-syntax'
NeoBundle 'maksimr/vim-jsbeautify'
